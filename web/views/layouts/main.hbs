<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    {{> header}}
    <div class="flex justify-center w-full">
      <div class="flex flex-col justify-center p-4 my-5 lg:my-10 w-full md:w-5/6 lg:w-2/3">
        {{{body}}}
      </div>
    </div>
    <div class="fixed top-0 left-0 w-full lg:w-fit">
      <div class="flex flex-col-reverse mx-2 mt-2 [&>*]:mb-2" id="popups">
        {{#each popups}}
          {{> popup type=type text=text}}
        {{/each}}
      </div>
    </div>
  </body>
</html>